@model IEnumerable<MyBookList.Models.Genres>

@{
    ViewData["Title"] = "Index";
}

<p style="text-align:right; margin:2.5% 0;">
    <a asp-action="Create" style="text-decoration:none;">Adicionar Género</a>
</p>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a style="margin-right: 10px;" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a style="margin-right: 10px;" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
