@model MyBookList.Models.Books

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-between" style="margin: 2.5% 5% 1%;">
    <a type="button" style="width:100px; text-align:center;" class="btn btn-outline-primary btn-sm" asp-action="Index">Voltar</a>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" style="background-color:#262a2b; color:white;" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" style="background-color:#262a2b; color:white;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" style="background-color:#262a2b; color:white;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            -->
            <div class="form-group">
                <label asp-for="GenresList" class="control-label"></label>
                <select asp-for="GenresList" name="GenresList" class="form-control" asp-items="ViewBag.GenresList" multiple style="background-color:#262a2b; color:white;">
                    <option value="0">Sem Géneros</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AuthorsList" class="control-label"></label>
                <select asp-for="AuthorsList" name="AuthorsList" class="form-control" asp-items="ViewBag.AuthorsList" multiple style="background-color:#262a2b; color:white;">
                    <option value="0">Sem Autor(es)</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PublisherFK" class="control-label"></label>
                <select asp-for="PublisherFK" name="PublisherFK" class="form-control" asp-items="ViewBag.PublisherFK" style="background-color:#262a2b; color:white;">
                    <option value="0">Sem Editora</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Livro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}