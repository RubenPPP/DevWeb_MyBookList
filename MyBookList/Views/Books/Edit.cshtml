@model MyBookList.Models.Books

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-between" style="margin: 2.5% 5% 1%;">
    <a type="button" style="width:100px; text-align:center;" class="btn btn-outline-primary btn-sm" asp-action="Index">Voltar</a>
</div>

<hr />

<div class="row" style="margin: 0 2.5%;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            -->
            <div class="form-group">
                <label asp-for="GenresList" class="control-label"></label>
                <select asp-for="GenresList" name="GenresList" class="form-control" asp-items="ViewBag.GenresList" multiple>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AuthorsList" class="control-label"></label>
                <select asp-for="AuthorsList" name="AuthorsList" class="form-control" asp-items="ViewBag.AuthorsList" multiple>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PublisherFK" class="control-label"></label>
                <select asp-for="PublisherFK" class="form-control" asp-items="ViewBag.PublisherFK"></select>
                <span asp-validation-for="PublisherFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}