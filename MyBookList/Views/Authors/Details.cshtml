@model MyBookList.Models.Authors

@{
    ViewData["Title"] = "Details";
}

<div style="color: white;">
  <div class="row" style="margin: 2.5%;">
    <div class="col-xs-6 col-md-4">
      <div class="card" style="background-color: #262a2b;">
       <!--<img class="card-img-top" src="testImage" alt="Card image" />-->
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <a type="button" class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a type="button" class="btn btn-outline-primary btn-sm" asp-action="Delete" asp-route-id="@Model?.Id">Apagar</a>
        <a type="button" class="btn btn-outline-primary btn-sm" asp-action="Index">Voltar</a>
      </div>
    </div>

    <div class="col-xs-12 col-md-8">
      <div class="card" style="height: 100%; background-color: #262a2b;">
        <div class="card-body">
          <h5 class="card-title">Biografia</h5>
          <p class="card-text">@Html.DisplayFor(model => model.Biography)</p>
        </div>
      </div>
    </div>
  </div>
</div>